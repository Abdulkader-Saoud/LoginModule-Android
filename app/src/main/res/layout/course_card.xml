<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/attendenceImage"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:background="@color/grey"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/attendenceImage"
            android:text="Android Development Course"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/attendenceImage"
            android:drawablePadding="2dp"
            android:text="BLM2020" />

        <TextView
            android:id="@+id/courseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseCode"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/attendenceImage"
            android:drawablePadding="2dp"
            android:text="10/10/2024 - 11/11/2025" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>