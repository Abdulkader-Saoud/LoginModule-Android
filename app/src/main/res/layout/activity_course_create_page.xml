<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darker">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Course.CourseCreatePage">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Course Maneger"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20sp"/>

        <TextView
            android:id="@+id/scopeTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Course ID:"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginStart="40sp"
            android:layout_marginTop="43sp"/>
        <EditText
            android:id="@+id/cidET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="BLM2020"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintStart_toEndOf="@id/scopeTitleTV"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="35sp"/>

        <TextView
            android:id="@+id/cnameTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Course Name"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cidET"
            android:layout_marginTop="43sp"/>
        <EditText
            android:id="@+id/cnameET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Android Development"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/cnameTF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="35sp"/>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Start / End Date"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnameET"
            android:layout_marginTop="43sp"/>

        <TextView
            android:id="@+id/sedateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="10/01/2024 - 10/01/2025"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTV"
            android:layout_marginTop="23sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editenddateBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/filledroundbox"
            android:backgroundTint="@color/blue"
            android:text="End"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/sedateTV"
            app:layout_constraintStart_toEndOf="@+id/editstartdateBTN"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="40sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editstartdateBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/filledroundbox"
            android:backgroundTint="@color/blue"
            android:text="Start"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/sedateTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editenddateBTN"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="40sp"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/filledroundbox"
            android:backgroundTint="#4CAF50"
            android:text="Save"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editstartdateBTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteBTN"
            android:layout_marginStart="44sp"
            android:layout_marginEnd="22sp"
            android:layout_marginTop="20sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/filledroundbox"
            android:backgroundTint="#FF00"
            android:text="Delete"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editstartdateBTN"
            app:layout_constraintStart_toEndOf="@+id/saveBTN"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="22sp"
            android:layout_marginEnd="44sp"
            android:layout_marginTop="20sp"
            />

        <TextView
            android:id="@+id/GroupsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Groups"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deleteBTN"
            android:layout_marginTop="43sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addgroupBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/filledroundbox_nopad"
            android:backgroundTint="#4CAF50"
            android:text="+"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/GroupsTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/instructorIDET"
            android:layout_marginStart="30sp"
            android:layout_marginTop="33sp"
            />

        <EditText
            android:id="@+id/instructorIDET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="intructor id"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/GroupsTV"
            app:layout_constraintStart_toEndOf="@id/addgroupBTN"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="35sp"/>


        <ListView
            android:id="@+id/instructorsLV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/instructorIDET"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30sp"
            android:divider="@color/darker"
            android:dividerHeight="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/filledroundbox_nopad"
            android:backgroundTint="@color/blue"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>