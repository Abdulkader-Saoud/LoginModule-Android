<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    android:orientation="vertical"
    tools:context=".Profile.RegisterPage">

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginTop="50sp"
        android:layout_marginStart="50sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/light"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_marginTop="20sp"
            android:layout_marginStart="60sp"
            android:fontFamily="@font/roboto_regular"
            />

        <TextView
            android:id="@+id/lSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textColor="@color/light"
            android:textSize="24sp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:layout_marginEnd="40sp"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:hint="Abdulkader"
            android:textColorHint="@color/grey"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="50sp"
            android:layout_marginEnd="10sp"
            android:nextFocusRight="@id/etSurname"
            />
        <EditText
            android:id="@+id/etSurname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:hint="SAOUD"
            android:textColorHint="@color/grey"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="50sp"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/cidTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:text="Student ID"
        android:textColor="@color/light"
        android:textSize="24sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="90sp"
        android:fontFamily="@font/roboto_regular"
        />

    <EditText
        android:id="@+id/etSTDID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbox"
        android:ems="10"
        android:inputType="numberSigned"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:hint="21011941"
        android:textColorHint="@color/grey"
        android:layout_marginTop="20sp"
        android:layout_marginStart="80sp"
        android:layout_marginEnd="80sp"
        android:fontFamily="@font/roboto_regular"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filledroundbox"
        android:backgroundTint="@color/blue"
        android:text="Register"
        android:layout_marginTop="30sp"
        android:layout_marginStart="90sp"
        android:layout_marginEnd="90sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="40sp"
        android:visibility="invisible"/>


</android.widget.LinearLayout>
