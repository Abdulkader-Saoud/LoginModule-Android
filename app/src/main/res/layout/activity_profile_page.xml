<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40sp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="20sp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="130sp"
            android:minWidth="130sp"
            android:background="@drawable/roundbox"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/CL"
            android:layout_marginTop="20sp"
            />

        <TextView
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Type :"
            android:textColor="@color/light"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgView"
            android:layout_marginStart="40sp"/>

        <TextView
            android:id="@+id/TVtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49sp"
            android:fontFamily="@font/roboto_regular"
            android:text="Student"
            android:textColor="@color/grey"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/imgView"
            android:layout_marginEnd="40sp"/>
        <TextView
            android:id="@+id/lSTDID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Student ID:"
            android:textColor="@color/light"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/etStdid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVtype"
            android:layout_marginStart="40sp"
            android:layout_marginTop="45sp"/>
        <EditText
            android:id="@+id/etStdid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="2100000"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintStart_toEndOf="@id/lSTDID"
            app:layout_constraintTop_toBottomOf="@+id/TVtype"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="40sp"/>

        <TextView
            android:id="@+id/lName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Name"
            android:textColor="@color/light"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etStdid"
            app:layout_constraintEnd_toStartOf="@+id/lSurname"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginTop="30sp"/>

        <TextView
            android:id="@+id/lSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Surname"
            android:textColor="@color/light"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/lName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etStdid"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginTop="30sp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Abdulkader"
            android:inputType="text"
            android:minHeight="48dp"
            android:nextFocusRight="@id/etSurname"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintEnd_toStartOf="@id/etSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lName"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="20sp"/>


        <EditText
            android:id="@+id/etSurname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbox"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="SAOUD"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintStart_toEndOf="@id/etName"
            app:layout_constraintTop_toBottomOf="@+id/lSurname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="20sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>